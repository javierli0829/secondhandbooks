{
  "name": "Green Book",
  "version": "1",
  "description": "An extension for automatic uploading image onto Green Book website",
  "icons": {"64": "images/book.png"},
  "permissions": ["http://*/*", "https://*/*", "tabs", "activeTab", "storage", "contextMenus"],
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["https://www.goodreads.com/book/show/*"],
      "css":["static/buttonStyle.css"]
    }
  ],
  "browser_action": {
    "default_icon": "images/book.png",
    "default_popup": "static/popup.html"
  },
  "manifest_version": 2
}
